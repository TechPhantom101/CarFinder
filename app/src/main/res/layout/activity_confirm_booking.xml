<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background_theme_neutralizer"
    tools:context=".ConfirmBooking">

    <ImageView
        android:id="@+id/imageView54"
        android:layout_width="87dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_name" />

    <ImageView
        android:id="@+id/confirmBooking_logo"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView54"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView54"
        app:layout_constraintTop_toBottomOf="@+id/imageView54"
        app:srcCompat="@drawable/companypicturenotavailable" />

    <TextView
        android:id="@+id/confirmBooking_CompanyAddress_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="companyemail@gmail.com"
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/confirm_booking_company_name"
        app:layout_constraintTop_toBottomOf="@+id/confirm_booking_company_name" />

    <TextView
        android:id="@+id/confirm_booking_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Company Name Here"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/confirmBooking_logo"
        app:layout_constraintStart_toEndOf="@+id/confirmBooking_logo"
        app:layout_constraintTop_toTopOf="@+id/confirmBooking_logo"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewforConfirmBooking"
        android:layout_width="386dp"
        android:layout_height="431dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Booking Request"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/confirm_booking_company_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirmBooking_logo"
        app:layout_constraintTop_toBottomOf="@+id/confirmBooking_logo" />

    <Button
        android:id="@+id/confirmBooking_OngoingBookingButton"
        android:layout_width="357dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Ongoing Rented Cars"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

</androidx.constraintlayout.widget.ConstraintLayout>