<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatingPassword">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="142dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_name" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter Current Password"
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <EditText
        android:id="@+id/editPasswordPage_CurrentPassword_ET"
        android:layout_width="357dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_styles"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <EditText
        android:id="@+id/editPasswordPage_NewPassword_ET2"
        android:layout_width="357dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_styles"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enter New Password"
        android:textColor="#000"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/checkPasswordButton"
        app:layout_constraintTop_toBottomOf="@+id/checkPasswordButton" />

    <Button
        android:id="@+id/checkPasswordButton"
        android:layout_width="357dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_color"
        android:text="Check Password"
        app:layout_constraintEnd_toEndOf="@+id/editPasswordPage_CurrentPassword_ET"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="@+id/editPasswordPage_CurrentPassword_ET"
        app:layout_constraintTop_toBottomOf="@+id/editPasswordPage_CurrentPassword_ET" />

    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="357dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary_color"
        android:text="Change Password"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/editPasswordPage_NewPassword_ET2"
        app:layout_constraintStart_toStartOf="@+id/editPasswordPage_NewPassword_ET2"
        app:layout_constraintTop_toBottomOf="@+id/editPasswordPage_NewPassword_ET2" />
</androidx.constraintlayout.widget.ConstraintLayout>