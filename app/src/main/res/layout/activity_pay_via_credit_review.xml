                app:layout_constraintTop_toTopOf="@+id/imageView49" />

            <TextView
                android:id="@+id/creditReviewAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Renter Age"
                android:textColor="#000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView50"
                app:layout_constraintStart_toEndOf="@+id/imageView50"
                app:layout_constraintTop_toTopOf="@+id/imageView50" />

            <TextView
                android:id="@+id/creditReviewTripAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Renter Trip Routes"
                android:textColor="#000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView51"
                app:layout_constraintStart_toEndOf="@+id/imageView51"
                app:layout_constraintTop_toTopOf="@+id/imageView51" />

            <TextView
                android:id="@+id/creditReviewGCashNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="GCash Mobile Number "
                android:textColor="#000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView52"
                app:layout_constraintStart_toEndOf="@+id/imageView52"
                app:layout_constraintTop_toTopOf="@+id/imageView52" />

            <TextView
                android:id="@+id/textView92"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Review"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView90"
                app:layout_constraintTop_toBottomOf="@+id/textView90" />

            <TextView
                android:id="@+id/textView98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Driver Details"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView67"
                app:layout_constraintTop_toBottomOf="@+id/textView67" />

            <ImageView
                android:id="@+id/imageView45"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/textView98"
                app:layout_constraintTop_toBottomOf="@+id/textView98"
                app:srcCompat="@drawable/car_icon" />

            <ImageView
                android:id="@+id/imageView46"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView45"
                app:layout_constraintStart_toStartOf="@+id/imageView45"
                app:layout_constraintTop_toBottomOf="@+id/imageView45"
                app:srcCompat="@drawable/payment_calendar" />

            <ImageView
                android:id="@+id/imageView47"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView46"
                app:layout_constraintStart_toStartOf="@+id/imageView46"
                app:layout_constraintTop_toBottomOf="@+id/imageView46"
                app:srcCompat="@drawable/profile_ic_second" />

            <ImageView
                android:id="@+id/imageView48"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView47"
                app:layout_constraintStart_toStartOf="@+id/imageView47"
                app:layout_constraintTop_toBottomOf="@+id/imageView47"
                app:srcCompat="@drawable/payment_email" />

            <ImageView
                android:id="@+id/imageView49"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView48"
                app:layout_constraintStart_toStartOf="@+id/imageView48"
                app:layout_constraintTop_toBottomOf="@+id/imageView48"
                app:srcCompat="@drawable/payment_call" />

            <ImageView
                android:id="@+id/imageView50"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView49"
                app:layout_constraintStart_toStartOf="@+id/imageView49"
                app:layout_constraintTop_toBottomOf="@+id/imageView49"
                app:srcCompat="@drawable/payment_age" />

            <ImageView
                android:id="@+id/imageView51"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView50"
                app:layout_constraintStart_toStartOf="@+id/imageView50"
                app:layout_constraintTop_toBottomOf="@+id/imageView50"
                app:srcCompat="@drawable/payment_location" />

            <ImageView
                android:id="@+id/imageView52"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView51"
                app:layout_constraintStart_toStartOf="@+id/imageView51"
                app:layout_constraintTop_toBottomOf="@+id/imageView51"
                app:srcCompat="@drawable/payment_credit" />

            <Button
                android:id="@+id/creditReview_BackButton"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#f54343"
                android:text="Back"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView52"
                app:layout_constraintTop_toBottomOf="@+id/imageView52" />

            <Button
                android:id="@+id/payViaCreditContinueButtonProcess"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#f54343"
                android:text="Continue"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="@+id/creditReview_BackButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/creditReview_BackButton"
                app:layout_constraintTop_toTopOf="@+id/creditReview_BackButton" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>