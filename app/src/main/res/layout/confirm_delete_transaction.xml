<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmDeleteTransaction">

    <TextView
        android:id="@+id/textView122"
        android:layout_width="228dp"
        android:layout_height="29dp"
        android:layout_marginTop="30dp"
        android:text="You Sure you want to delete Transaction?"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteTransactionButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Delete Transaction"
        android:backgroundTint="@color/approved_color"
        app:layout_constraintEnd_toEndOf="@+id/textView122"
        app:layout_constraintStart_toStartOf="@+id/textView122"
        app:layout_constraintTop_toBottomOf="@+id/textView122" />
</androidx.constraintlayout.widget.ConstraintLayout>