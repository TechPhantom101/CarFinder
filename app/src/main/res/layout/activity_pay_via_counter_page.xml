<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background_theme_neutralizer"
    tools:context=".PayViaCounterPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="114dp"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_name" />

            <TextView
                android:id="@+id/payViaCounterCarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Undefined"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/NO1"
                app:layout_constraintStart_toEndOf="@+id/NO1"
                app:layout_constraintTop_toTopOf="@+id/NO1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/NO1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Car Model : "
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imageView34"
                app:layout_constraintTop_toBottomOf="@+id/imageView34" />

            <TextView
                android:id="@+id/NO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Car Rate Per Hour : "
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/NO1"
                app:layout_constraintTop_toBottomOf="@+id/NO1" />

            <TextView
                android:id="@+id/payViaCounterCarPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Undefined"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/NO"
                app:layout_constraintStart_toEndOf="@+id/NO"
                app:layout_constraintTop_toTopOf="@+id/NO"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Details"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.245" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="Setup Trip Date"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/payViaCounterAddress"
                app:layout_constraintTop_toBottomOf="@+id/payViaCounterAddress" />

            <TextView
                android:id="@+id/textView138"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Rented Number of hours : "
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView62"
                app:layout_constraintTop_toBottomOf="@+id/textView62" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="From"
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/textView62"
                app:layout_constraintTop_toBottomOf="@+id/textView62" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="To"
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/spinnerOverCounterFromMonth"
                app:layout_constraintTop_toBottomOf="@+id/spinnerOverCounterFromMonth" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Trip Distination : "
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/spinnerOverCounterToMonth"
                app:layout_constraintTop_toBottomOf="@+id/spinnerOverCounterToMonth" />

            <EditText
                android:id="@+id/payViaCounterFirstName"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_styles"
                android:ems="10"
                android:hint="First Name"
                android:paddingLeft="10dp"
                app:layout_constraintStart_toStartOf="@+id/textView60"
                app:layout_constraintTop_toBottomOf="@+id/textView60"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/payViaCounterEmail"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_styles"
                android:ems="10"
                android:hint="Email"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/payViaCounterLastName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/payViaCounterFirstName"
                app:layout_constraintTop_toBottomOf="@+id/payViaCounterFirstName"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/payViaCounterAddress"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_styles"
                android:ems="10"
                android:hint="Address"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/payViaCounterEmail"
                app:layout_constraintStart_toStartOf="@+id/payViaCounterMobileNumber"
                app:layout_constraintTop_toBottomOf="@+id/payViaCounterMobileNumber"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/payViaCounterMobileNumber"
                android:layout_width="186dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_styles"
                android:ems="10"
                android:hint="Mobile Number"
                android:paddingLeft="10dp"
                app:layout_constraintStart_toStartOf="@+id/payViaCounterEmail"
                app:layout_constraintTop_toBottomOf="@+id/payViaCounterEmail"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/payViaCounterAge"
                android:layout_width="129dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_styles"
                android:ems="10"
                android:hint="Age"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/payViaCounterMobileNumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/payViaCounterMobileNumber"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/payViaCounterLastName"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_styles"
                android:ems="10"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/payViaCounterFirstName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/payViaCounterFirstName"
                app:layout_constraintTop_toTopOf="@+id/payViaCounterFirstName"
                tools:ignore="MissingConstraints" />

            <Spinner
                android:id="@+id/spinnerOverCounterFromMonth"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_styles"
                app:layout_constraintStart_toStartOf="@+id/textView63"
                app:layout_constraintTop_toBottomOf="@+id/textView63" />

            <Spinner
                android:id="@+id/spinnerOverCounterNumberofHours"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/input_styles"
                app:layout_constraintBottom_toBottomOf="@+id/textView138"
                app:layout_constraintStart_toEndOf="@+id/textView138"
                app:layout_constraintTop_toTopOf="@+id/textView138"
                app:layout_constraintVertical_bias="0.45" />

            <Spinner
                android:id="@+id/spinnerOverCounterToMonth"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_styles"
                app:layout_constraintStart_toStartOf="@+id/textView64"
                app:layout_constraintTop_toBottomOf="@+id/textView64" />

            <Spinner
                android:id="@+id/spinnerOverCounterTripProvince"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_styles"
                app:layout_constraintStart_toStartOf="@+id/textView136"
                app:layout_constraintTop_toBottomOf="@+id/textView136" />

            <Spinner
                android:id="@+id/spinnerOverCounterTripMunicipalities"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_styles"
                app:layout_constraintStart_toStartOf="@+id/textView137"
                app:layout_constraintTop_toBottomOf="@+id/textView137" />

            <Spinner
                android:id="@+id/spinnerOverCounterTripRegion"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/input_styles"
                app:layout_constraintStart_toStartOf="@+id/textView135"
                app:layout_constraintTop_toBottomOf="@+id/textView65" />

            <Spinner
                android:id="@+id/spinnerOverCounterFromDay"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/input_styles"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerOverCounterFromMonth"
                app:layout_constraintStart_toEndOf="@+id/spinnerOverCounterFromMonth"
                app:layout_constraintTop_toTopOf="@+id/spinnerOverCounterFromMonth" />

            <Spinner
                android:id="@+id/spinnerOverCounterToDay"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/input_styles"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerOverCounterToMonth"
                app:layout_constraintStart_toEndOf="@+id/spinnerOverCounterToMonth"
                app:layout_constraintTop_toTopOf="@+id/spinnerOverCounterToMonth" />

            <Spinner
                android:id="@+id/spinnerOverCounterFromYear"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_styles"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerOverCounterFromDay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/spinnerOverCounterFromDay"
                app:layout_constraintTop_toTopOf="@+id/spinnerOverCounterFromDay" />

            <Spinner
                android:id="@+id/spinnerOverCounterToYear"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_styles"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerOverCounterToDay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/spinnerOverCounterToDay"
                app:layout_constraintTop_toTopOf="@+id/spinnerOverCounterToDay" />


            <Button
                android:id="@+id/payViaCounterPageContinueButton"
                android:layout_width="187dp"
                android:layout_height="39dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#f54343"
                android:text="Continue"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerOverCounterTripProvince" />

            <TextView
                android:id="@+id/textView135"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Region"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/spinnerOverCounterToMonth"
                app:layout_constraintTop_toBottomOf="@+id/spinnerOverCounterToMonth" />

            <TextView
                android:id="@+id/textView136"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="Province"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/textView135"
                app:layout_constraintStart_toEndOf="@+id/textView135"
                app:layout_constraintTop_toTopOf="@+id/textView135" />

            <TextView
                android:id="@+id/textView137"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:text="City of : "
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/textView135"
                app:layout_constraintStart_toEndOf="@+id/textView135"
                app:layout_constraintTop_toTopOf="@+id/textView135"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView139"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="30dp"
                android:text="Driver is Provided by Renting Company"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView140"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="Please Attach Drivers' License"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView139"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView139"
                app:layout_constraintTop_toBottomOf="@+id/textView139" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/approved_color"
                android:text="Attach Driver License"
                app:layout_constraintEnd_toEndOf="@+id/textView140"
                app:layout_constraintHorizontal_bias="0.59"
                app:layout_constraintStart_toStartOf="@+id/textView140"
                app:layout_constraintTop_toBottomOf="@+id/textView140" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>