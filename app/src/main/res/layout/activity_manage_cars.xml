<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/page_background_theme_neutralizer"
    android:layout_height="match_parent"
    tools:context=".ManageCars">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="103dp"
                android:layout_height="65dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_name" />

            <TextView
                android:id="@+id/deleteCars_CompanyName_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Car Rental Company Name"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/businessOwnerDashboard_logo"
                app:layout_constraintStart_toEndOf="@+id/businessOwnerDashboard_logo"
                app:layout_constraintTop_toTopOf="@+id/businessOwnerDashboard_logo"
                app:layout_constraintVertical_bias="0.446" />

            <TextView
                android:id="@+id/deleteCars_CompanyAddress_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G-pepito St. Poblacion Valencia City Bukidnon"
                android:textColor="#000"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/deleteCars_CompanyName_TV"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/deleteCars_CompanyName_TV"
                app:layout_constraintTop_toBottomOf="@+id/deleteCars_CompanyName_TV" />

            <ImageView
                android:id="@+id/businessOwnerDashboard_logo"
                android:layout_width="69dp"
                android:layout_height="74dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@+id/imageView13"
                app:layout_constraintTop_toBottomOf="@+id/imageView13"
                app:srcCompat="@drawable/companypicturenotavailable" />

            <Button
                android:id="@+id/addCarsBTN"
                android:layout_width="157dp"
                android:layout_height="46dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#f54343"
                android:text="Add cars"
                android:textColor="#fff"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/businessOwnerDashboard_logo"
                app:layout_constraintTop_toBottomOf="@+id/businessOwnerDashboard_logo" />

            <Button
                android:id="@+id/deleteCarsBTN"
                android:layout_width="162dp"
                android:layout_height="47dp"
                android:layout_marginStart="24dp"
                android:backgroundTint="#f54343"
                android:text="Delete Cars"
                android:textColor="#fff"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/addCarsBTN"
                app:layout_constraintStart_toEndOf="@+id/addCarsBTN"
                app:layout_constraintTop_toTopOf="@+id/addCarsBTN"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1000dp"
                android:text="Back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewForCompanyCars"
                android:layout_width="401dp"
                android:layout_height="649dp"
                android:layout_marginTop="360dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>